<Window x:Class="SmartClimate.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Емулятор системи Smart Climate"
        Height="430" Width="1020"
        WindowStartupLocation="CenterScreen"
        Background="#0F172A">
    <Window.Resources>
        <!-- Базовий текст -->
        <Style x:Key="BaseText" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
        </Style>

        <!-- Заголовки карток -->
        <Style x:Key="CardTitle" TargetType="TextBlock" BasedOn="{StaticResource BaseText}">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Значення параметрів -->
        <Style x:Key="ValueText" TargetType="TextBlock" BasedOn="{StaticResource BaseText}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,4,0,4"/>
        </Style>

        <!-- Підписи до параметрів -->
        <Style x:Key="CaptionText" TargetType="TextBlock" BasedOn="{StaticResource BaseText}">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <!-- Картка -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Background" Value="#111827"/>
            <Setter Property="BorderBrush" Value="#1F2937"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="12"
                                      ShadowDepth="0"
                                      Opacity="0.35"
                                      Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Кнопка -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2563EB"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="8"
                                      ShadowDepth="1"
                                      Opacity="0.4"
                                      Color="#1D4ED8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1D4ED8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1E40AF"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#4B5563"/>
                                <Setter Property="Opacity" Value="0.7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхня панель -->
        <Grid Grid.Row="0" Margin="0,0,0,14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock Style="{StaticResource BaseText}"
                           FontSize="20"
                           FontWeight="SemiBold"
                           Text="Емулятор системи мікроклімату"/>
                <TextBlock Style="{StaticResource CaptionText}"
                           Text="Віртуальний IoT-пристрій: датчики + виконавчі пристрої"/>
                <TextBlock Style="{StaticResource CaptionText}"
                           Text="{Binding TimeOfDayText}"
                           Margin="0,4,0,0"/>
            </StackPanel>

            <Button Style="{StaticResource PrimaryButton}"
                    Grid.Column="1"
                    x:Name="ToggleOccupantButton"
                    Click="ToggleOccupantButton_OnClick">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Перемкнути присутність"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- Основний вміст -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>   <!-- ліва картка: вузька -->
                <ColumnDefinition Width="1.8*"/>   <!-- права картка: ширша -->
            </Grid.ColumnDefinitions>

            <!-- Ліва картка: середовище -->
            <Border Style="{StaticResource Card}" Margin="0,0,10,0">
                <StackPanel>
                    <TextBlock Style="{StaticResource CardTitle}"
                               Text="Параметри середовища"/>

                    <StackPanel Orientation="Vertical" Margin="0,4,0,0">
                        <TextBlock Style="{StaticResource CaptionText}" Text="Температура"/>
                        <TextBlock Style="{StaticResource ValueText}"
                                   Text="{Binding TemperatureText}"/>

                        <TextBlock Style="{StaticResource CaptionText}" Text="Вологість"/>
                        <TextBlock Style="{StaticResource ValueText}"
                                   Text="{Binding HumidityText}"/>

                        <TextBlock Style="{StaticResource CaptionText}" Text="Освітленість"/>
                        <TextBlock Style="{StaticResource ValueText}"
                                   Text="{Binding LightText}"/>

                        <TextBlock Style="{StaticResource CaptionText}" Text="Присутність у приміщенні"/>
                        <TextBlock Style="{StaticResource ValueText}"
                                   Text="{Binding OccupantText}"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Права картка: режими + журнал -->
            <Border Grid.Column="1" Style="{StaticResource Card}">
                <StackPanel>
                    <TextBlock Style="{StaticResource CardTitle}"
                               Text="Стан виконавчих пристроїв"/>

                    <TextBlock Style="{StaticResource CaptionText}"
                               Text="Режим роботи контролера"/>
                    <ComboBox ItemsSource="{Binding Modes}"
                              SelectedValue="{Binding SelectedMode}"
                              SelectedValuePath="Key"
                              DisplayMemberPath="Value"
                              Margin="0,0,0,8"
                              FontFamily="Segoe UI"
                              FontSize="13"
                              Background="#020617"
                              BorderBrush="#1F2937">

                        <!-- Перефарбовуємо і верхнє поле, і дропдаун -->
                        <ComboBox.Resources>
                            <!-- фон для верхнього поля / списку -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.WindowBrushKey}"
                                             Color="#020617" />
                            <!-- колір тексту -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.ControlTextBrushKey}"
                                             Color="#E5E7EB" />
                            <!-- рамка -->
                            <SolidColorBrush x:Key="{x:Static SystemColors.WindowFrameBrushKey}"
                                             Color="#1F2937" />
                        </ComboBox.Resources>

                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem">
                                <Setter Property="Foreground" Value="#E5E7EB"/>
                                <Setter Property="Background" Value="#020617"/>
                                <Setter Property="Padding" Value="6,3"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="FontFamily" Value="Segoe UI"/>
                                <Setter Property="FontSize" Value="13"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>

                    <TextBlock Style="{StaticResource ValueText}"
                               Text="{Binding ActuatorsText}"
                               TextWrapping="Wrap"/>

                    <Separator Margin="0,10,0,8"/>

                    <TextBlock Style="{StaticResource CaptionText}"
                               Text="Журнал подій:"/>

                    <ListBox ItemsSource="{Binding Events}"
                             Background="#020617"
                             Foreground="#E5E7EB"
                             BorderBrush="#1F2937"
                             BorderThickness="1"
                             FontFamily="Consolas"
                             FontSize="12"
                             Height="170"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
